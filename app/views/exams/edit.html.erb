<h1><%= t :exam %></h1>
<br>
<%= form_for @exam do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :done, value: true %>

  <%= f.fields_for :results do |builder| %>
    <%= render "result_form", f: builder %>
  <% end %>

  <div class="row">
    <%= f.submit t("submit"), class: "btn btn-primary", data: {confirm: t(:confirm_notification)} %>
  </div>
  <br><br><br><br><br><br>
<% end %>
